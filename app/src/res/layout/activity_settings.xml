<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/thunder_dark_blue"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:padding="16dp">

        <TextView android:text="@string/settings_title" android:textColor="@color/thunder_text"
            android:textSize="20sp" android:textStyle="bold"/>

        <!-- Emulador -->
        <TextView android:text="@string/settings_emulator" android:textColor="@color/thunder_electric_blue"/>
        <Spinner android:id="@+id/emulatorSpinner" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <!-- Expansión -->
        <TextView android:text="@string/settings_expansion" android:textColor="@color/thunder_electric_blue"/>
        <Spinner android:id="@+id/expansionSpinner" android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <!-- DB -->
        <TextView android:text="@string/settings_db" android:textColor="@color/thunder_electric_blue"/>
        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/dbHost" android:hint="Host DB"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/dbPort" android:hint="Puerto DB"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/dbName" android:hint="Nombre DB"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/dbUser" android:hint="Usuario DB"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/dbPass" android:hint="Contraseña DB" android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- SOAP -->
        <TextView android:text="@string/settings_soap" android:textColor="@color/thunder_electric_blue"/>
        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/soapHost" android:hint="Host SOAP"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/soapPort" android:hint="Puerto SOAP"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/soapUser" android:hint="Usuario SOAP"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText android:id="@+id/soapPass" android:hint="Contraseña SOAP" android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButton"
            style="@style/ThunderOutlinedButton"
            android:text="@string/settings_save"
            android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp"/>
    </LinearLayout>
</ScrollView>