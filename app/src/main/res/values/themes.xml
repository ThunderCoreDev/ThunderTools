<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema principal Battle.net Style -->
    <style name="Theme.ThunderTools" parent="Theme.Material3.Dark">
        <item name="android:statusBarColor">@color/dark_blue</item>
        <item name="android:navigationBarColor">@color/dark_blue</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Colores personalizados -->
        <item name="colorPrimary">@color/electric_blue</item>
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    
    <!-- Tema Splash Screen simplificado -->
    <style name="Theme.ThunderTools.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/dark_blue</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
