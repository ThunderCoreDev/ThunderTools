<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#00B4FF"
                android:endColor="#33C3FF"
                android:angle="270" />
            <corners android:radius="8dp" />
            <stroke 
                android:width="1dp" 
                android:color="#66B4FF" />
            <padding 
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="8dp" />
        </shape>
    </item>
    
    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#132347"
                android:endColor="#1A3563"
                android:angle="270" />
            <corners android:radius="8dp" />
            <stroke 
                android:width="1dp" 
                android:color="@color/battlenet_electric_blue" />
            <padding 
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>
